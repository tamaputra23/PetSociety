<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="1dp"
    android:layout_margin="5dp"
    android:padding="20dp"
    app:cardElevation="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_privehd"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:layout_marginStart="10dp"
            android:text="nama barang"
            android:textSize="18sp"
            android:textColor="@android:color/black"/>

        <ImageView
            android:id="@+id/iv_needs"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_below="@+id/tv_privehd"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_needs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_needs"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="Rp 50000"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/ib_minus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/iv_needs"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/tv_needs"
            android:scaleType="fitXY"
            android:background="@android:color/white"
            android:src="@drawable/icons8minus64" />

        <TextView
            android:id="@+id/tv_totalNd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_needs"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/ib_minus"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/ib_plus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/iv_needs"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/tv_totalNd"
            android:scaleType="centerCrop"
            android:src="@drawable/icons8plus64"
            android:background="@android:color/white"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>